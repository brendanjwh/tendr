<div class="post_wrapper">
  <h1>So you think you got a good recipe, eh?!</h1>

  <%= form_for :recipe, url: recipes_path do |f| %>
    <% if @recipe.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@recipe.errors.count, "error") %> prevented this recipe from saving</h2>
        <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :ingredients %><br>
    <%= f.text_field :ingredients %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label :instructions %><br>
    <%= f.text_field :instructions %><br>
    <%= f.label :tags %><br>
    <%= f.text_field :tags %><br>
    <%= f.submit %>
  <% end %>
</div>