<div class="center container">
  <% @recipes.each do |recipe| %>
    <div class="center card-panel radical-blue hoverable z-depth-3 opacity">
      <%= link_to recipe.name, recipe %>
      <ul class="collapsible" data-collapsible="expandable">
        <li>
          <div class="collapsible-header"><i class="material-icons">filter_drama</i>Description</div>
          <div class="collapsible-body"><span><%= recipe.description %></span></div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">place</i>Tags</div>
          <div class="collapsible-body"><span><% tag_cloud recipe.tag_counts, %w[s m l] do |tag| %>
          <%= link_to tag.name, tag_path(tag.name), class: "btn btn-sm btn-default" %>
        <% end %></span></div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">whatshot</i>Instructions</div>
          <div class="collapsible-body"><span><%= recipe.instructions %></span></div>
        </li>
      </ul>
    </div>
  <div class="divider"></div>
  <% end %>
<div class="divider"></div>
</div>

