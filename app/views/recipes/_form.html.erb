<div class="container light-blue darken-4 hoverable z-depth-3">
  <%= form_for @recipe do |f| %>
    <% if @recipe.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@recipe.errors.count, "error") %> prevented this recipe from saving</h2>
        <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :ingredients %><br>
    <%= f.text_field :ingredients %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label :instructions %><br>
    <%= f.text_field :instructions %><br>
    <%= f.label :tags %><br>
    <%= f.text_field :tags %><br>
    <%= f.submit %>
  <% end %>
</div>